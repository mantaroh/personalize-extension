{
  "manifest_version": 3,
  "name": "Personalize Extension",
  "description": "Async personalization engine capturing browsing behaviour and adapting pages.",
  "version": "0.1.0",
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": ["storage", "alarms", "history"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "personalize-extension@example.com",
      "strict_min_version": "109.0"
    }
  }
}
